ReadWritePaths=-/var/lib/systemd/timesync

# com.deepin.daemon.AirplaneMode
ReadWritePaths=-/var/lib/dde-daemon/airplane_mode
# com.deepin.daemon.ImageEffect
ReadWritePaths=-/var/cache/image-blur
